<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android1:columnCount="1"
    android1:rowCount="3"
    tools:context=".MediaFragment" >

    <LinearLayout
        android:id="@+id/linearLayout0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android1:layout_column="0"
        android1:layout_gravity="center_vertical|center_horizontal"
        android1:layout_marginTop="50dp"
        android1:layout_row="0"
        android:padding="10dp"
        android1:background="#484848"
        android1:gravity="center"
        android1:orientation="vertical" >

        <ListView
            android:id="@+id/playList"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#484848"
            android:fastScrollEnabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:listSelector="@drawable/list_selector"
            android:minHeight="250dp"
            android:scrollbars="vertical"
            android:smoothScrollbar="true" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android1:layout_column="0"
        android1:layout_gravity="center_vertical|center_horizontal"
        android1:layout_row="2"
        android1:background="#484848"
        android1:orientation="horizontal"
        android1:padding="10dp" >

        <Button
            android:id="@+id/playbutton"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_margin="10dp"
            android:background="#4b0d2d"
            android:clickable="true"
            android:text="@string/play"
            android:textColor="#ffffff"
            android1:padding="10dp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/pausebutton"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_margin="10dp"
            android:background="#4b0d2d"
            android:clickable="true"
            android:text="@string/pause"
            android:textColor="#ffffff"
            android:visibility="gone"
            android1:padding="10dp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/stopbutton"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_margin="10dp"
            android:background="#4b0d2d"
            android:clickable="true"
            android:text="@string/stop"
            android:textColor="#ffffff"
            android1:padding="10dp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</GridLayout>