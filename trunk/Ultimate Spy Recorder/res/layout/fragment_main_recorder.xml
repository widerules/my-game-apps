<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#4b0d2d"
    android:fastScrollEnabled="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    android:smoothScrollbar="true" >

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4b0d2d"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android1:columnCount="1"
    android1:rowCount="4"
    tools:context=".RecorderFragment" >

    <LinearLayout
        android1:id="@+id/linearLayoutr0"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_column="0"
        android1:layout_gravity="center_vertical|center_horizontal"
        android1:layout_marginTop="50dp"
        android1:layout_row="0"
        android:padding="10dp"
        android1:background="#484848"
        android1:gravity="center"
        android1:orientation="vertical" >

        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Chronometer
            android1:id="@+id/chronometer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFD700"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#101010"
            android:textSize="72sp"
            android1:text="@string/chronometer" />
    </LinearLayout>

 <TextView
     android:id="@+id/section_label2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:visibility="invisible"
     />

    <LinearLayout
        android1:id="@+id/linearLayoutr1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_column="0"
        android1:layout_gravity="center_vertical|center_horizontal"
        android1:layout_row="3"
        android1:background="#484848"
        android1:orientation="horizontal"
        android1:padding="10dp" >

        <Button
            android1:id="@+id/start_rec"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_margin="10dp"
            android:clickable="true"
            android:textColor="#101010"
            android1:background="#FFD700"
            android1:padding="10dp"
            android1:text="@string/start_rec"
            tools:ignore="ButtonStyle" />

        <Button
            android1:id="@+id/stop_rec"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_margin="10dp"
            android:clickable="true"
            android:textColor="#101010"
            android1:background="#FFD700"
            android1:padding="10dp"
            android1:text="@string/stop_rec"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</GridLayout>
</ScrollView>