<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003366"
    android:fastScrollEnabled="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    android:smoothScrollbar="true"
    android1:columnCount="1"
    android1:rowCount="6"
    tools:context=".SettingsFragment" >

    <LinearLayout
        android1:id="@+id/linearLayoutr12"
        android1:layout_width="wrap_content"
        android1:layout_height="40dp"
        android1:layout_column="0"
        android1:layout_gravity="center_vertical|center_horizontal|top"
        android1:layout_marginTop="10dp"
        android1:layout_row="0"
        android1:background="#ffffff"
        android1:gravity="top"
        android1:orientation="vertical"
        android1:padding="5dp" >

        <Switch
            android1:id="@+id/switch1"
            android1:layout_width="wrap_content"
            android1:layout_height="match_parent"
            android1:layout_alignParentLeft="true"
            android1:layout_alignParentRight="true"
            android1:text="@string/switch1"
            tools:ignore="ObsoleteLayoutParam" />
    </LinearLayout>

    <LinearLayout
        android1:id="@+id/linearLayoutr10"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_column="0"
        android1:layout_gravity="center_vertical|center_horizontal|center"
        android1:layout_marginTop="50dp"
        android1:layout_row="1"
        android1:background="#ffffff"
        android1:gravity="center"
        android1:orientation="horizontal"
        android1:padding="5dp" >

        <TimePicker
            android1:id="@+id/timePicker1"
            android1:layout_width="wrap_content"
            android1:layout_height="144dp"
            android1:layout_marginTop="2dp"
            tools:ignore="ObsoleteLayoutParam" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android1:layout_column="0"
        android1:layout_gravity="center_vertical|center_horizontal"
        android1:layout_marginTop="50dp"
        android1:layout_row="3"
        android1:background="#ffffff"
        android1:gravity="left"
        android1:orientation="horizontal"
        android1:padding="5dp" >

        <TextView
            android1:id="@+id/section_label"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:visibility="gone" />

        <CheckBox
            android1:id="@+id/checkBox1"
            android1:layout_width="125dp"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center_horizontal|left"
            android1:gravity="left"
            android1:text="@string/checkbox" />
    </LinearLayout>

</GridLayout>